@model IEnumerable<Book>
@{ 
    ViewBag.Title = "Books";

}
<h3>List of Books</h3>
        @if(Model.Count() == 0)
        {
            <h3>no books</h3>
        }
        else
        {
            <ul class="list-group">
                @foreach(var book in Model)
                {
                    <li class="list-group-item">
                        @* @Html.ActionLink(book.BookName, "Details", "Books", new{id = Book.Id}) *@
                        <a asp-action="Details" asp-route-id="@book.Id" asp-controller="Books">@book.BookName</a>
                    </li>
                }
            </ul>
        }
